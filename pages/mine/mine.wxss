page{
  height:100%;
  width:100%;
}
.page-hd {
  padding:20rpx;
  height: 35%;
}
.page{
  height: 100%;
  width: 100%;
}
.weui-grid__icon{
  width: 100%;
  height: 100px;
}
.weui-grid{
  width: 50%;
  padding: 10px;
  border: none;
  background-color: #FFF;
  border-radius: 5rpx;
}

.popPanel{
  position: absolute;
  padding:0;
  margin:0;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background-color: 	rgba(204,204,204,.8);
}
.popPanel > video{
  width:80%;
  position: absolute;
  top:50%;
  left:10%;
  transform: translate(0,-50%);
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}