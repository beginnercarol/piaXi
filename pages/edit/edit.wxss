#currentVideo {
  width: 100%;
  top: 0;
  left: 0;
}
.page-body {
  position: relative;
}
.weui-input {
  text-align: center;
}

.weui-cell__bd {
  height: 200px;
}

.weui-cells .weui-cells_after-title {
  height: 200px;
  border: none;
}

.edit-control{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  color: #999;
}
.clearfix:after{
  content: "";
  display: block;
  height:0;
  clear: both;
}
.edit-control>view:first-child{
  float:left;
  z-index: 9999;
}
.edit-control>view:last-child{
  float:right;
  z-index:9999;
}
view.underline {
  border-bottom: 1px solid #999;
}
.controls {
  position: absolute;
  bottom: 0;
  border-width: 0;
  border-radius: 50%;
  background-repeat: no-repeat;
}

.controls:first-child{
  background-position: 40% center;
}

.controls:last-child{
  background-position: 65% center;
}
.controls::after {
  border: none;
}

.control {
  position:relative;
  margin-top: 100rpx;
  width: 100%;
  height:100rpx;
  margin-bottom: 100rpx;
}

.control > button {
  box-shadow: 2px 0 5px #999,
  -2px 0 5px #999,
  0 2px 5px #999,
  0 -2px 5px #999;
}


.edit-lines {
  right: 15%;
  width: 100rpx;
  height: 100rpx;
  background-size: 64rpx 64rpx;
}
.microphone {
  left: 50%;
  transform: translate(-50%);
  width: 150rpx;
  height: 150rpx;
  border-width: 0;
  line-height: 150rpx;
  background-repeat: no-repeat;
  background-size: 80rpx 80rpx;
  background-position: center;
}

.bgm {
  left: 15%;
  width: 100rpx;
  height: 100rpx;
  background-size: 64rpx 64rpx;
}
.bgm-btn {
  position: relative;
}

text {
  font-size: 20rpx;
  text-align: center;
}
scroll-view {
  position: relative;
  padding-top: 30px;
  border-top: 1px solid #ccc;
}


scroll-view view {
  padding: 0 10px;
  font-size: 26rpx;
}

.currentShowLine {
  font-size: 32rpx;
  color: rgba(34, 139, 34, 0.5);
  border-bottom: 1px solid rbg(34,139,34);
}

.invisible-panel {
  display: none;
}
.visible-panel{
  display: block;
  position: absolute;
  bottom: 90rpx;
  left: 5%;
  width: 30%;
  background-color: #FFF; 
  border-radius: 30rpx;
  z-index: 999;
  border: 1px solid #ccc;
}
.visible-panel:after{
  content:'';
  display: block;
  
}
.visible-panel scroll-view{
  width: 100%;
  border: none;
  padding:0;
}
.visible-panel radio{
  display: block;
  width: 100%;
  transform: scale(0.7);
}
.visible-panel radio text{
  font-size: 40rpx;
}

.page__hd{
  position: relative;
}
.mask{
  position: absolute;
  width:100%;
  height: 100%;
  z-index: 999;
  top:0;
  left:0;
  background-color: transparent;
}
